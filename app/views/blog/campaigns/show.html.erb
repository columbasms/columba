<% title @campaign.organization.organization_name %>

<!-- Meta for Facebook -->
<meta property="og:title" content="Columba SMS - <%= @campaign.organization.organization_name %>"/>
<meta property="og:url" content="<%= blog_campaign_url %>"/>
<meta property="og:description" content="<%= @campaign.message %>"/>

<!-- Meta for Google -->
<meta name="title" content="Columba SMS - <%= @campaign.organization.organization_name %>" />
<meta name="description" content="<%= @campaign.message %>" />

<!-- Meta for Twitter -->
<meta name="twitter:card" content="<%= @campaign.message %>" />
<meta name="twitter:title" content="Columba SMS - <%= @campaign.organization.organization_name %>" />
<meta name="twitter:description" content="<%= @campaign.message %>" />


<article id="featured">
  <h2><%= @campaign.organization.organization_name %></h2>
</article>

<section id="content" class="cols-a">
  <div class="news-a">
    <article>
      <header>
        <h3><%= @campaign.organization.organization_name %></h3>
        <ul>
          <li><a href="javascript:;"><%= image_tag @campaign.organization.avatar.url(:thumb_48), width: 40, height: 40 %>
            <%= t 'frontent.by' %> <%= @campaign.organization %></a></li>
          <li><i class="icon-basic" data-icon="x"></i> <%= raw I18n.localize @campaign.created_at, format: '%d %B %Y' %></li>
          <li>
            <%= t 'blog.expires_at' %>
            <i class="icon-basic" data-icon="x"></i> <%= raw I18n.localize @campaign.expires_at, format: '%d %B %Y' %>
          </li>
        </ul>
      </header>
      <% if @campaign.photo.exists? %>
          <meta property="og:image" content="<%= @campaign.photo %>"/>
          <meta name="twitter:image" content="<%= @campaign.photo %>" />
          <meta name="image" content="<%= @campaign.photo %>" />

          <figure ><%= image_tag @campaign.photo.url(:original)%></figure>
      <%else%>
          <% if @campaign.organization.cover.exists? %>
            <meta property="og:image" content="<%= @campaign.organization.cover %>"/>
            <meta name="twitter:image" content="<%= @campaign.organization.cover %>" />
            <meta name="image" content="<%= @campaign.organization.cover %>" />
          <% end %>
      <% end %>
      <p><%= raw @campaign.message %></p>
      <p><%= raw @campaign.long_description %></p>
    </article>
  </div>

  <%= render partial: 'aside' %>
</section>