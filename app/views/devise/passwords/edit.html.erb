<% content_for :h3 do %>Change your password<% end %>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, id: 'form-password', role: 'form' }) do |f| %>

    <% if devise_error_messages? %>
        <div class="alert alert-danger">
          <%= devise_error_messages! %>
        </div>
    <% end %>

    <%= f.hidden_field :reset_password_token %>

    <div class="row">
      <div class="col-sm-12">
        <div class="form-group form-group-default">
          <%= f.label :password, 'New password' %><br />
          <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %>
          <%= f.password_field :password, autofocus: true, autocomplete: 'off', class: 'form-control', required: 'required' %>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-sm-12">
        <div class="form-group form-group-default">
          <%= f.label :password_confirmation, 'Confirm new password' %>
          <%= f.password_field :password_confirmation, autocomplete: 'off', class: 'form-control', required: 'required' %>
        </div>
      </div>
    </div>

    <%= f.submit 'Change my password', class: 'btn btn-primary btn-cons m-t-10' %>
<% end %>