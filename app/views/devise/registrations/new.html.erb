<% content_for(:h3) do %>Request your Columba account<% end %>

<% content_for(:title) do %>Columba - Sign up<% end %>

<% content_for :javascripts do %>

    <script>
      $(function() {
        $('#form-register').validate();
      });
    </script>

<% end %>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'p-t-15', role: 'form', id: 'form-register' }) do |f| %>

    <% if devise_error_messages? %>
        <div class="alert alert-danger">
          <%= devise_error_messages! %>
        </div>
    <% end %>

    <div class="row">
      <div class="col-sm-6">
        <div class="form-group form-group-default">
          <%= f.label :email %>
          <%= f.email_field :email, autofocus: true, class: 'form-control', required: 'required' %>
        </div>
      </div>

      <div class="col-sm-6">
        <div class="form-group form-group-default">
          <%= f.label :organization_name %>
          <%= f.text_field :organization_name, class: 'form-control', required: 'required' %>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-sm-12">
        <div class="form-group form-group-default">
          <%= f.label :password %>
          <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: 'off', class: 'form-control', required: 'required' %>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-sm-12">
        <div class="form-group form-group-default">
          <%= f.label :password_confirmation %>
          <%= f.password_field :password_confirmation, autocomplete: 'off', class: 'form-control', required: 'required' %>
        </div>
      </div>
    </div>

    <div class="row m-t-10">
      <div class="col-md-6">
        <p>I agree to the <a href="#" class="text-info small">Terms</a> and <a href="#" class="text-info small">Privacy</a>.</p>
      </div>
    </div>

    <%= f.submit 'Request', class: 'btn btn-primary btn-cons m-t-10' %> <span class="m-r-10 m-l-5">or</span>
    <%= link_to 'Login', new_organization_session_path, class: 'btn btn-complete btn-cons m-t-10' %>
<% end %>